<div class="container ShowcardBody my-4">  
    <div class="bg-light">
        <div class="row">
            <div class="col-md-3 mt-3">
                <div class="profile-img">
                    <img src="pets.svg"class="mb-4 mt-2" style="border: 1px solid gray;"/>
                    <h6 class="mt-3">QUICK LINKS</h6>
                    <a class="link-btn" href="/reports">My Reports</a> <br>
                    <a class="link-btn" href="/reports/new">Add A Report</a>
                </div>
            </div>
            <div class="col-md-6 my-5 py-5">
                <div class="profile-head">
                    <h5 class="card-body mt-4 mb-1">About Me</h5>
                    <hr>
                    <div class="row">
                        <div class="col-md-6">
                            <label>User Id:</label>
                        </div>
                        <div class="col-md-6">
                            <p><%= current_user.id%></p>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <label>User Name:</label>
                        </div>
                        <div class="col-md-6">
                            <p><%= current_user.name%></p>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <label>User Email</label>
                        </div>
                        <div class="col-md-6">
                            <p><%= current_user.email%></p>
                        </div>
                    </div>
                     <%if current_user.admin == true %>
                       <div class="row">
                        <div class="col-md-6">
                            <label>User Admin</label>
                        </div>
                        <div class="col-md-6">
                            <p><%= current_user.admin%></p>
                        </div>
                    </div>     
                    <%end%> 
                </div>
            </div>
            <div class="col-md-2 mt-3">
                <a class="link-btn" href="/users/edit">Edit Profile</a>
            </div>
        </div>
    </div>
</div>
<div class="container">       
    <div class="jumbotron my-4 text-white">
        <div class="row">
            <div class="col-md-4">
                <div class="profile-img">
                    <img src="pets.svg"/>
                    <h6 class="mt-3">Quick LINKS</h6>
                    <a class="link-btn" href="/reports">My Reports</a> <br>
                    <a class="link-btn" href="/reports/new">Report A Pet</a>
                </div>
            </div>
            <div class="col-md-6">
                <div class="profile-head mt-5 mb-5">
                    <h5 class="nav-tabs mb-4">About Me</h5>
                    <div class="row">
                        <div class="col-md-6">
                            <label>User Id</label>
                        </div>
                        <div class="col-md-6">
                            <p><%= current_user.id%></p>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <label>Name</label>
                        </div>
                        <div class="col-md-6">
                            <p><%= current_user.name%></p>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <label>Email</label>
                        </div>
                        <div class="col-md-6">
                            <p><%= current_user.email%></p>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-2 mt-3">
                <a class="link-btn" href="/users/edit">Edit Profile</a>
            </div>
        </div>

    </div>
</div>

<body> 
    <div class="container">  
        <header class="jumbotron bg my-4 mt-5">
            <h1 class="display-4 text-white">Pet Rescue!</h1>
            <p class="lead text-white"> Losing Your Baby can be scary and painful experience,<br> 
            This is why we are here to reunite owners with their pets.</p>
            <br class="my-5">
            <p class="lead">
                <%=link_to "Report A Lost or Found Pet!", new_report_path, class:"btn btn-light"%> 
            </p>
        </header> 

         <form class="form-inline">
                <input class="form-control mr-sm-2 " type="search" placeholder="Search by City or Report Type">
                <button class="btn btn-outline-dark my-2 my-sm-0" type="submit">Search </button>
            </form>
            <br>
<div class="row cardBody">
        <% @reports.each do |report| %>
            <% if report.reporttype == "Lost"%> 
                <div class="col-lg-3 col-md-6 py-3">
                    <div class="card h-100 text-black border-danger">
                                <%= image_tag(report.img, alt: "Pet Image", class:"card-img-top", height:"200") %>
                                <div class="top-left"> 
                                    <% if report.reporttype == "Lost"%> 
                                            <h5 class= "none btn btn-danger btn-sm disabled " > 
                                                <%=report.reporttype%>
                                            </h5> 
                                    <%else%>
                                            <h5 class= "none btn btn-success btn-sm disabled" > 
                                                <%=report.reporttype%>
                                            </h5>
                                    <%end%>     
                                </div>
                             <div class="card-body bg-light">
                            <h3 class="card-title"> <%= report.petname %></h3>
                            <p class="card-text"><strong>Pet <%=report.reporttype%> Address</strong><br>  
                            <%= report.address %>, <%= report.city %></p>
                            <p class="card-text"><strong>Pet <%=report.reporttype%> Date</strong><br>  
                            <%= report.date.strftime("%d/%m/%Y") %>
                            </p>
                        </div>
                           <%= link_to "Find Out More!", report_path(report), class:"btn btn-light" %>
                    </div>
                </div>     
            <%else%>
                <div class="col-lg-3 col-md-6 py-3">
                    <div class="card h-100 text-black border-success">
                            <%= image_tag(report.img, alt: "Pet Image", class:"card-img-top", height:"200") %>
                            <div class="top-left"> 
                                <% if report.reporttype == "Lost"%> 
                                        <h5 class= "none btn btn-danger btn-sm disabled " > 
                                            <%=report.reporttype%>
                                        </h5> 
                                <%else%>
                                        <h5 class= "none btn btn-success btn-sm disabled" > 
                                            <%=report.reporttype%>
                                        </h5>
                                <%end%>     
                            </div>
                        <div class="card-body bg-light">
                            <h3 class="card-title"> <%= report.petname %></h3>
                            <p class="card-text"><strong>Pet <%=report.reporttype%> Address</strong><br>  
                            <%= report.address %>, <%= report.city %></p>
                            <p class="card-text"><strong>Pet <%=report.reporttype%> Date</strong><br>  
                            <%= report.date.strftime("%d/%m/%Y") %>
                            </p>
                        </div>

                          <%= link_to "Find Out More!", report_path(report), class:"btn btn-light" %>
                    </div>
                </div>  
            <%end%>  
        <%end%>    
    </div>
</div>
</body>
 
                
                 
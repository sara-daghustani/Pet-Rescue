
<div class="container my-4 mt-5">  
    <div class="row ShowcardBody">
      
            <% if @report.reporttype == "Found"%> 
                    <div class="col">
                        <div class="card h-100 text-black border-success">
                                <%= image_tag(@report.img, alt: "Pet Image", class:"img-fluid rounded showimg")%> 
                                <div class="row-lg-7 d-flex justify-content-between">
                                    <div class="top-left"> 
                                        <% if @report.reporttype == "Lost"%> 
                                                <h5 class= "none btn btn-danger btn-sm disabled " > 
                                                    <%=@report.reporttype%>
                                                </h5> 
                                        <%else%>
                                                <h5 class= "none btn btn-success btn-sm disabled" > 
                                                    <%=@report.reporttype%>
                                                </h5>
                                        <%end%>   
                                        <%if user_signed_in?%>

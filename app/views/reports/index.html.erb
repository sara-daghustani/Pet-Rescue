
<div class="container">  
  <div class="text-white jumbotron my-5">
    <p class="d-content">
      <%=link_to "Add A Report", new_report_path, class:"btn btn-light"%>
    </p>
    <h1 class=" display-4 text-center mb-5 text-white"> My Pet Reports</h1>
        
    <div class="table-responsive-xl">
      <table class="table" style= "text-align:center; align-item:center;">
        <thead class="thead">
          <tr>
            <th scope="col">Status</th>
            <th scope="col">Image</th>
            <th scope="col">Pet Name</th>
            <th scope="col">Species</th>
            <th scope="col">Pet Color</th>
            <th scope="col">Address</th>
            <th scope="col">Date</th>
            <th scope="col" class="setting">Show | Edit | Delete</th>
          </tr>
        </thead>

          <tbody>
            <% @report.each do |report| %>
              <tr>
                <% if report.reporttype == "Lost" %>
                <td style ="color: red"><%=report.reporttype%></td>
                <%else%> 
                <td style ="color: green"><%=report.reporttype%></td>
                <%end%>
                <td><%= image_tag(report.img, size: "50x50", alt: "Pet Image") %></td>
                <td><%=report.petname%></td>
                <td><%=report.species%></td>
                <td><%=report.color%></td>
                <td><%=report.address%>, <%=report.city%></td>
                <td><%=report.date.strftime("%b %e, %Y ")%></td>
                <td><%= link_to "Show", report_path(report), class:"link-btn" %> |
               <%= link_to "Edit", edit_report_path(report), class:"link-btn"%> |
               <%= link_to "Delete", report_path(report),class:"link-btn" , method: :delete, data: {confirm:"Are you sure you want to delete"}%></td>
              </tr>
            <% end %>
          </tbody>
      </table>
    </div>
  </div>
</div>
